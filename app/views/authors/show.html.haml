.row
  .col-lg-1
  .col-lg-5
    .jumbotron
      .row
        .col-md-3.col-xs-3
        .col-md-9.col-xs-9
          %p.text-danger='About Author'
      .row
        .col-md-1.col-xs-1
        .col-md-2.col-xs-3
          = image_tag author.photo(:thumb), size: "150x150", :class => 'img-circle img-responsive'
        .col-md-9.col-xs-8
        -if author.link_profile.blank?
          %h4=author.fullname
          .jus
            %strong=simple_format(author.about)          
        -else
          %h4
            =link_to author.fullname , author.link_profile, :target => "_blank"
          .jus
            %strong=author.about 
      
    .alert
      =link_to 'Edit Author', edit_author_path(author), :class => 'btn btn-primary'
      =link_to 'Back to Authors', authors_path, :class => 'btn btn-danger'
      =link_to t('.destroy', :default => t("helpers.links.destroy")),
              author_path(author),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger'      
  .col-lg-6
