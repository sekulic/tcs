<div class="row">
<div class="col-lg-12 col-md-12">
<div id="carousel-example-generic" class="carousel slide sldhold" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner sld">
  	<% @slider_articles.each_with_index do |article, index| %>
  	<% if index == 0 %>
    <div class="item active">
    <% else %>
    <div class="item">
    <% end %>
     <%= image_tag article.photo1(:medium), :height => "200px", :width => "100%", :alt => article.p1desescription %>
    <%= link_to "articles/#{article.url}" do%>
      <div class="carousel-caption">
      	<center>
        <div class="pozadina-slajder">
        	<h4 class="text-danger"><%= article.title%></h4>
        	<p class="text-danger"><small><%= article.description%></small></p>
        </div>
        </center>	
      </div>
	<%end%>	    
    </div>      
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
</div>
</div>
<script>
	var cw = $('.sld').width();
	var ch =  cw/100 * 55
	ch = Math.round(ch);
    $('.sld').css({'height':ch+'px'});
</script>
